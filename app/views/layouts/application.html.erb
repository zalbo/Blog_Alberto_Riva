<!DOCTYPE html>
<html>
<head>
  <title>BlogAlbo</title>

	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<!--[if lte IE 8]><script src="assets/js/ie/html5shiv.js"></script><![endif]-->
  <link rel="stylesheet" href="/assets/css/main.css" />
  <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
	<!--[if lte IE 9]><link rel="stylesheet" href="assets/css/ie9.css" /><![endif]-->
	<!--[if lte IE 8]><link rel="stylesheet" href="assets/css/ie8.css" /><![endif]-->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <!-- Wrapper -->
  <div id="wrapper">

    <!-- Div for allert message -->
    <% binding.pry%>
    <% if flash[:notice]  %>
    <div id="message_box">
      <script>
      function enter(){
        $('#message_box').hide().fadeIn(2000, function () {
          $(this).delay(1500).fadeOut(2000);
        });
      }
      enter();
      </script>
      <h3 id="vertical"> <%= flash[:notice] %> </h3>
    </div>
    <% end %>

    <!-- END Div for allert message -->

    <!-- Header -->
    <header id="header">
      <div class="rectangle">
        <a href="/" class="logo" >
          <img class="img_logo" src="/images/logo_alberto_riva.svg" alt="Logo" >
        </a>

        <a href="#contact" class="button_contact_me button" >
          <h4 class="contact_me">Contact me</h4>
        </a>
      </div>

    </header>

    <!-- END Header -->

    <!-- Main -->



    <%= yield %>

    <!-- Footer -->
    <footer id="footer">
      <div class="inner">
        <section id="contact">
          <h1 class="footer">Contact me</h1>
          <form method="post" action="send_email">
            <div class="field half first">
              <input type="text" name="name" id="name" placeholder="Nome" />
            </div>
            <div class="field half">
              <input type="email" name="email" id="email" placeholder="Tua email" />
            </div>
            <div class="field">
              <textarea name="message" id="message" placeholder="Messaggio"></textarea>
            </div>
            <ul class="actions">
              <li><input type="submit" value="Send" class="special button_form" /></li>
            </ul>
          </form>
        </section>
        <section>
          <h1 class="footer">Follow</h1>
          <ul class="icons">
            <li><a href="#" class="icon style2 "><img class="icon_social" src="/images/linkedin-logo.png"></a></li>
            <li><a href="#" class="icon style2 "><img class="icon_social" src="/images/phone-logo.png"></a></li>
          </ul>
        </section>
        <ul class="copyright">
          <li>&copy; Untitled. All rights reserved</li><li>Design: Alberto Riva & Silvia Riva</li>
        </ul>
      </div>
    </footer>

  </div>
</body>

<!-- Scripts -->
<script src="/assets/js/jquery.min.js"></script>
<script src="/assets/js/skel.min.js"></script>
<script src="/assets/js/util.js"></script>
<!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
<script src="/assets/js/main.js"></script>



</html>
